@using VendorAndOrderTracker.Models;
@{
  Layout = "_Layout";
}

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet. Feel free to add one!</h3>
}

@foreach (Vendor vendor in Model)
{
  <h3><a href="/vendors/@vendor.Id">@vendor.Name</a></h3>
}

<p>Return to <a href="/">Home</a></p>
<p><a href="/vendors/new">Add</a> a new vendor!</p>