@using VendorAndOrderTracker.Models;
@{
  Layout = "_Layout";
}

<h3>Here are all the orders for this vendor</h3>

<ol>
  @foreach(Order order in @Model["orders"])
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a><p class="orderDescription">- @order.Description</p></li>
  }
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add</a> a new order to this vendor</p>
<p>Return to <a href="/vendors">vendor list</a></p>
<p>Return <a href="/">Home</a></p>
<form action='/vendors/@Model["vendor"].Id/orders/delete' method="POST">
  <button type="submit">Clear all orders</button>
</form>
<form action="/vendors/delete" method="POST">
  <button type="submit">Remove this Vendor</button>
</form>