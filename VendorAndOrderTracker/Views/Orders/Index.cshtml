@using VendorAndOrderTracker.Models;
@{
  Layout = "_Layout";
}

<h1>Order List</h1>

@if (Model.Count == 0)
{
  <p>There are no orders in the list.</p>
}
<ul>
  @foreach (Order order in Model)
  {
    <li>Title: <a href='/order/@order.Id'>@order.Title</a></li>
    <li>Description: <a href='/order/@order.Id'>@order.Description</a></li>
    <li>Price: <a href='/order/@order.Id'>@order.Price</a>$</li>
    <li>Date: <a href='/order/@order.Id'>@order.Date</a></li>
    <li>-------------------------------------------------------------------</li>
  }
</ul>
<a href="/order/new">Add a new order.</a>

<form action="/order/delete" method="post">
  <button type="submit" name="button">Clear all orders</button>
</form>